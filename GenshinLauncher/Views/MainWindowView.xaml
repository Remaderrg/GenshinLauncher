    xmlns:genshinLauncher="clr-namespace:GenshinLauncher"
    xmlns:models="clr-namespace:GenshinLauncher.Models"

    Width="1285" Height="730"
    ResizeMode="NoResize"
    WindowStyle="None"
    ui:WindowHelper.UseModernWindowStyle="True"
    ui:ThemeManager.RequestedTheme="Dark"
    ui:TitleBar.ExtendViewIntoTitleBar="True">
    <Window.Background>
        <ImageBrush ImageSource="https://github.com/Remaderrg/GenshinLauncher/blob/main/GenshinLauncher/Views/fon.png?raw=true"/>
    </Window.Background>






    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>

        <Grid Background="#141414"
              Grid.ColumnSpan="4">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <TextBlock Text="GI Launcher"
                       Foreground="White"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Montserrat-Variable"
                       FontSize="17"/>

            <TextBlock Text="2.5.0"
                       Foreground="#434343"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontFamily="Fonts/#Montserrat-Variable" 
                       FontSize="17"/>

        </Grid>


        <StackPanel 
            Grid.Column="0" 
            Grid.Row="1" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Bottom"
            Margin="15,10,0,19">

            <GroupBox Header="Path" 
                      Width="350" HorizontalAlignment="Left" Foreground="Black"  >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" Margin="0,-15,0,1" TextWrapping="WrapWithOverflow " 
                             PreviewMouseDown="{s:Action SetLocation}" IsReadOnly="True"
                             Text="{Binding Location, Mode=OneWay}" Height="45" Grid.ColumnSpan="2"  />
                </Grid>
            </GroupBox>
        </StackPanel>

        <StackPanel 
            Grid.Column="2" 
            Grid.Row="1" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Bottom"
            Margin="0,10,55,35">



            <Button Command="{s:Action LaunchGame}"
                    Content="Settings"
                    Width="150" 
                    Height="25" 
                    Margin="10,10,-80,10"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    FontFamily="Arial" Foreground="#CC000000"   >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#66A09F9C"/>
                        <GradientStop Color="#6673726F" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Cursor" Value="Hand"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DimGray"/>
                            </Trigger>
                        </Style.Triggers>

                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="150" Height="25"
                                    CornerRadius="10"
                                    Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" 
                                                  HorizontalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>

            <Button Command="{s:Action LaunchGame}"
                    Content="Launch Game"
                    Width="240" 
                    Height="65" 
                    FontSize="26"
                    HorizontalAlignment="Center"
                    FontFamily="Arial"   >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFFCF0D"/>
                        <GradientStop Color="#FFFFC004" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Cursor" Value="Hand"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DimGray"/>
                            </Trigger>
                        </Style.Triggers>

                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="240" Height="65"
                                    CornerRadius="5"
                                    Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" 
                                                  HorizontalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>
        </StackPanel>

